{
  "name": "nestjs-doctor",
  "version": "0.1.0",
  "description": "Diagnostic CLI tool that scans NestJS codebases and produces a health score with actionable diagnostics",
  "type": "module",
  "bin": {
    "nestjs-doctor": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/api/index.js",
      "require": "./dist/api/index.cjs"
    },
    "./api": {
      "import": "./dist/api/index.js",
      "require": "./dist/api/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nestjs",
    "diagnostic",
    "lint",
    "health-check",
    "architecture",
    "security",
    "best-practices"
  ],
  "author": "RoloBits",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "tsdown": "^0.9.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "clipboardy": "^4.0.0",
    "picocolors": "^1.1.0",
    "tinyglobby": "^0.2.0",
    "ts-morph": "^25.0.0"
  }
}
